# Configuração do Bot de Trading Binance
# Copie este arquivo para config.yaml e ajuste conforme necessário

# Configuração da API Binance
api:
  testnet: true  # true para testnet, false para produção
  base_url: "https://testnet.binance.vision"  # URL base (automático)
  timeout: 30  # Timeout das requisições em segundos

# Configurações de Trading
trading:
  symbol: "BTCUSDT"  # Par de criptomoedas para negociar
  risk_per_trade: 0.01  # Risco por trade (1% do capital)
  max_positions: 1  # Máximo de posições simultâneas
  min_trade_amount: 10  # Valor mínimo de trade em USDT
  check_interval: 5  # Intervalo entre análises em segundos

# Configurações da Estratégia
strategy:
  # Média Móvel Exponencial
  ema_period: 200
  
  # MACD
  macd_fast: 12
  macd_slow: 26
  macd_signal: 9
  
  # RSI
  rsi_period: 14
  rsi_oversold: 30
  rsi_overbought: 70
  
  # Volume
  volume_period: 20
  volume_threshold: 1.5  # Multiplicador do volume médio
  
  # ADX (Average Directional Index)
  adx_period: 14
  min_adx: 25  # ADX mínimo para considerar tendência forte
  
  # Pressão do Book de Ofertas
  orderbook_depth: 5  # Níveis do book a analisar
  min_pressure_ratio: 1.2  # Ratio mínimo entre pressão favorável/desfavorável

# Gestão de Risco
risk_management:
  # Position Sizing
  max_risk_per_trade: 0.02  # Máximo 2% por trade
  max_portfolio_risk: 0.1   # Máximo 10% do portfólio em risco
  
  # Stop Loss e Take Profit
  atr_period: 14
  stop_loss_atr_multiplier: 1.5  # Stop loss = ATR * multiplicador
  take_profit_atr_multiplier: 3.0  # Take profit = ATR * multiplicador
  
  # Trailing Stop
  trailing_stop_enabled: true
  trailing_stop_trigger_ratio: 0.5  # Quando ativar trailing (% do TP)
  trailing_stop_step: 0.25  # Passo do trailing stop em ATR
  
  # Limites de Posição
  max_position_value: 1000  # Valor máximo de posição em USDT
  min_position_value: 10    # Valor mínimo de posição em USDT

# Sistema de Logging
logging:
  level: "INFO"  # DEBUG, INFO, WARNING, ERROR
  console_output: true
  file_output: true
  
  # Configuração de arquivos de log
  files:
    main: "logs/trading_bot.log"
    decisions: "logs/trading_decisions.log"
    risk: "logs/risk_management.log"
    performance: "logs/performance.log"
    api: "logs/api_communication.log"
  
  # Rotação de logs
  max_file_size: "10MB"
  backup_count: 5
  rotation_when: "midnight"

# Notificações Telegram (opcional)
telegram:
  enabled: false  # true para ativar notificações
  token: ""  # Token do bot Telegram (via @BotFather)
  chat_id: ""  # ID do chat para enviar mensagens
  
  # Tipos de notificação
  notifications:
    trade_opened: true
    trade_closed: true
    stop_loss_hit: true
    take_profit_hit: true
    errors: true
    daily_summary: true

# Configurações de Performance
performance:
  # Cache de indicadores
  cache_enabled: true
  cache_size: 1000
  
  # Otimizações
  max_concurrent_requests: 5
  rate_limit_delay: 0.1  # Delay entre requisições (segundos)
  
  # Monitoramento
  monitor_latency: true
  max_acceptable_latency: 2.0  # Latência máxima aceitável (segundos)

# Configurações de Backtesting (futuro)
backtesting:
  enabled: false
  start_date: "2024-01-01"
  end_date: "2024-12-31"
  initial_balance: 10000
  commission: 0.001  # 0.1% de comissão